<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585858"
    tools:context=".add_new_bike"
    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/half_circle_down_h"
        android:alpha=".7"
        android:layout_alignParentRight="true">
    </ImageView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/half_circle_left_v"
        android:alpha=".7"
        android:layout_alignParentRight="true">
    </ImageView>


    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo">
    </ImageView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:id="@+id/slogan"
        android:src="@drawable/slogan">
    </ImageView>
    <ImageView

        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slogan"
        android:src="@drawable/service_station">
    </ImageView>
    <EditText


        android:id="@+id/company"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Bike Company"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_grey"
        android:layout_marginTop="300dp"
        >
    </EditText>
    <EditText

        android:id="@+id/model"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter Bike Model"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_grey"
        android:layout_below="@+id/company"
        android:layout_marginTop="10dp"
        >
    </EditText>
    <EditText
        android:id="@+id/bikeNumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter Bike Number"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_grey"
        android:layout_below="@+id/model"
        android:layout_marginTop="10dp"
        >
    </EditText>
    <EditText
        android:id="@+id/bikeYear"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Enter Bike Year"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_grey"
        android:layout_below="@+id/bikeNumber"
        android:layout_marginTop="10dp"
        >
    </EditText>
    <Button
        android:id="@+id/Add_Bike"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Add Bike"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_green"
        android:layout_below="@+id/bikeYear"
        android:layout_marginTop="70dp"
        >
    </Button>


</RelativeLayout>