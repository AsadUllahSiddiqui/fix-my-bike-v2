<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#585858"
    android:weightSum="10"
    tools:context=".User_History">
    <RelativeLayout
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    >
    <ImageButton android:id="@+id/user_history_back_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:maxWidth="40dp"
        android:maxHeight="58dp"
        android:scaleType="fitCenter"
        android:layout_marginLeft="7dp"
        android:background="#585858"
        android:src="@drawable/back_yellow"
        />
        <TextView
            android:layout_width="200dp"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:layout_height="30dp"
            android:text="User History"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5">
        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/userHistory_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="9dp"
            android:background="@drawable/abb"
            android:alpha=".6 "
            >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>