<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#585858"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Select_Services">
    <LinearLayout
        android:background="@drawable/grey"
        android:layout_weight="3"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton android:id="@+id/Tuning_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:maxWidth="80dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:src="@drawable/tuning"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuning"
                    android:textColor="#585858"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/Tuning_Button"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton android:id="@+id/Engine_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:maxWidth="80dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:src="@drawable/engine"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engine Repair"
                    android:textColor="#585858"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/Engine_id"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton android:id="@+id/Inspection_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:maxWidth="80dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:src="@drawable/inspection"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inspection"
                    android:textColor="#585858"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/Inspection_id"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton android:id="@+id/Head_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="100dp"
                    android:background="@null"
                    android:src="@drawable/head"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Head Repair"
                    android:textColor="#585858"
                    android:layout_alignStart="@+id/Head_id"
                    android:layout_below="@+id/Head_id"
                    android:layout_alignLeft="@+id/Head_id" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton android:id="@+id/Power_Tuning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:maxWidth="80dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:src="@drawable/p_tunning"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power Tuning"
                    android:textColor="#585858"
                    android:layout_alignStart="@+id/Power_Tuning"
                    android:layout_below="@+id/Power_Tuning"
                    android:layout_alignLeft="@+id/Power_Tuning" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/bike_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FECE2F"
            android:text="Not selected"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            >

        </TextView>
        <LinearLayout
            android:id="@+id/select"
            android:layout_width="271dp"
            android:weightSum="8"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:layout_height="278dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_height="0dp"></LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <RelativeLayout
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Basic Tuning"
                        android:textColor="#FECE2F"
                      />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/check1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <CheckBox
                        android:id="@+id/checkBox_basicTuning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <RelativeLayout
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Engine Repair"
                        android:textColor="#FECE2F"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <CheckBox
                        android:id="@+id/checkBox_Engine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <RelativeLayout
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Inspection"
                        android:textColor="#FECE2F"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <CheckBox
                        android:id="@+id/checkBox_Inspection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <RelativeLayout
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Head Repair"
                        android:textColor="#FECE2F"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <CheckBox
                        android:id="@+id/checkBox_Head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <RelativeLayout
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Power Tuning"
                        android:textColor="#FECE2F"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <CheckBox
                        android:id="@+id/checkBox_Power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                >
                <RelativeLayout
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:text="Others"
                        android:textColor="#FECE2F"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    >
                    <CheckBox
                        android:id="@+id/checkBox_others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                ></LinearLayout>

        </LinearLayout>

        <Button
            android:layout_below="@+id/select"
            android:id="@+id/save_selection_button"
            android:layout_marginTop="25dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:text="order"
            android:layout_marginLeft="270dp"
            >
        </Button>
        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/select_bike"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:text="select bike"
            >
        </Button>
        <LinearLayout
            android:id="@+id/estimation_bar"
            android:background="@drawable/background"
            android:layout_width="220dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/select"
            android:layout_alignStart="@+id/select"
            android:layout_alignLeft="@+id/select">
            <RelativeLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated Cost ="
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000 RS"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>
</LinearLayout>