<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#585858"
    tools:context=".first_login_signup">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/half_circle_down_h"
        android:alpha=".7"
        android:layout_alignParentRight="true">
    </ImageView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/half_circle_left_v"
        android:alpha=".7"
        android:layout_alignParentRight="true">
    </ImageView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/half_circle_up_h"
        android:alpha=".7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
    </ImageView>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:src="@drawable/half_circle_right_v"
        android:layout_alignParentBottom="true"
        android:alpha=".7"
        android:layout_alignParentLeft="true">
    </ImageView>

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo">
    </ImageView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:src="@drawable/slogan">
    </ImageView>
    <Button
        android:id="@+id/signUp_user"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=" customer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:layout_marginTop="250dp"
        >
    </Button>
    <Button
        android:id="@+id/SignUp_admin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Workshop Owner"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:layout_marginTop="350dp"
        >
    </Button>

</RelativeLayout>